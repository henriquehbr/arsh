arch-chroot /mnt /bin/bash << EOF
  su $USER_NAME

  cd ~

  while ! pacman -Qg ${EXTRA_GROUP_PACKAGES[*]} && ! pacman -Q ${EXTRA_OFFICIAL_PACKAGES[*]}; do
    echo "$USER_PASSWORD" | sudo -S pacman --needed --noconfirm -S ${EXTRA_OFFICIAL_PACKAGES[*]} ${EXTRA_GROUP_PACKAGES[*]}
    wait
  done

  # Clones my dotfiles
  git clone https://github.com/henriquehbr/dotfiles

  # Deploy dotfiles
  (cd dotfiles ; git submodule update --init --recursive ; ./deploy)

  # Installs st from source
  (cd .config/st ; echo "$USER_PASSWORD" | sudo -S make clean install)

  # Clones yay repository
  git clone https://aur.archlinux.org/yay-bin.git

  # Installs yay from source
  (cd yay-bin ; makepkg ; echo "$USER_PASSWORD" | sudo -S pacman --noconfirm -U yay-bin*)

  # Installs extra graphical packages
  while ! pacman -Q ${EXTRA_AUR_PACKAGES[*]}; do
    echo "$USER_PASSWORD" | yay --sudoflags -S --removemake --noconfirm -S ${EXTRA_AUR_PACKAGES[*]}
    wait
  done

  # Run networkmanager on boot
  echo "$USER_PASSWORD" | sudo -S systemctl enable NetworkManager

  # Sync time with network
  echo "$USER_PASSWORD" | sudo -S timedatectl set-ntp true

  # Add non-root user to required group by virtualbox
  echo "$USER_PASSWORD" | sudo -S usermod -aG vboxusers "$USER_NAME"

  # Allow users in "video" group to manipulate backlight (screen brightness)
  (echo "$USER_PASSWORD" ; echo "RUN+=\"/bin/chgrp wheel /sys/class/backlight/intel_backlight/brightness\"") | sudo -S tee /etc/udev/rules.d/backlight.rules
  (echo "$USER_PASSWORD" ; echo "RUN+=\"/bin/chmod g+w /sys/class/backlight/intel_backlight/brightness\"") | sudo -S tee -a /etc/udev/rules.d/backlight.rules

  # Create user directories
  xdg-user-dirs-update

  # Set "/bin/sh" to "dash"
  echo "$USER_PASSWORD" | sudo -S ln -sfT /usr/bin/sh
EOF
