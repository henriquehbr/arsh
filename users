arch-chroot /mnt /bin/bash << EOF
  # Set root password
  printf "$ROOT_PASSWORD\n$ROOT_PASSWORD" | passwd

  # Create new non-root user (and add it to essential groups)
  # wheel = default for sudo
  # video = manipulate screen brightness
  # vboxusers = required by virtualbox
  # storage = allow accessing usb subsystem through virtualbox
  useradd -mG wheel,video,vboxusers,storage $USER_NAME

  # Set password non-root user password
  printf "$USER_PASSWORD\n$USER_PASSWORD" | passwd $USER_NAME

  # Installs "sudo"
  pacman --noconfirm -S sudo

  # Allow members of group wheel to execute any command (as sudo)
  sed -i 's/# %wheel ALL=(ALL) ALL/%wheel ALL=(ALL) ALL/' /etc/sudoers
EOF
