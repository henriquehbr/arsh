(
  echo g # Creates a new GPT partition table
  #
  echo n # Creates a new boot partition
  echo 1 # Set as partition 1
  echo # Ignore "First sector" prompt (defaults to 2048)
  echo +550M # Set partition size to 550mb
  #
  echo n # Creates a new partition (swap)
  echo 2 # Set as partition 2
  echo # Ignore "First sector" prompt (defaults to end of last sector)
  echo "+$SWAP_SIZE" # Set swap size
  #
  echo n # Creates a new partition (filesystem)
  echo 3 # Set as partition 3
  echo # Ignore "First sector" prompt (defaults to end of last sector)
  echo # Ignore "Last sector" prompt (defaults to remaining space on disk)
  #
  echo t # Change partition type
  echo 1 # Select partition 1
  echo 1 # Set partition type to EFI System
  #
  echo t # Change partition type
  echo 2 # Select partition 2
  echo 19 # Set partition type to swap
  #
  echo w # Write changes to disk
) | fdisk /dev/sda
