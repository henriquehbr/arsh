# Update date in order to avoid certificate issues
timedatectl set-ntp true

# Refreshes pacman mirrors
pacman -Syy

pacman -S --noconfirm reflector

# Get the most updated mirrors from the specified country
reflector --connection-timeout 10 --download-timeout 10 --sort age -c $MIRROR_COUNTRY --save /etc/pacman.d/mirrorlist

pacman -Syy
