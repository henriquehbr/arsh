# Insert "mirrors" after "bootloader"
MODULES=(
  "variables"
  "validate-config"
  "partitioning"
  "formatting"
  "mirrors"
  "install-packages"
  "generate-fs-table"
  "timezone"
  "locales"
  "hostname"
  "users"
  "bootloader"
  "extra"
  "post-install"
)

MODULES=$(IFS=, ; echo "${MODULES[*]}")

curl -s "git.io/J3BJ9/config" > config
curl -s "git.io/J3BJ9/{$MODULES}" >> arsh

chmod +x arsh

source config
source arsh
